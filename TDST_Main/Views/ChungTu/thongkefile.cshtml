@using TDST_CRUD.ViewModels;
@using TDST.Models
@model List<Group<string, FileChungTuViewModel>>

@{
    ViewBag.Title = "LINQ Grouping";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<style type="text/css">
    table {
        border: 1px solid #999;
    }

    th {
        padding: 8px;
        background: LightBlue;
        text-align: left;
        font-family: Tahoma;
        font-size: 14px;
    }

    thead th {
        background: SteelBlue;
        color: #fff;
        font-family: Tahoma;
        font-size: 14px;
    }

    td {
        padding: 5px 8px;
        background: #f5f5f5;
        font-family: Tahoma;
        font-size: 12px;
    }
</style>

<div class="panel-heading">
   Thống kê CH-TM theo file chứng từ
</div>

<table>
    <thead>
        <tr>
            <th>Tiểu mục</th>
            @*<th>Tiểu mục</th>*@
            <th>Số tiền</th>
            <th>Năm</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr><th colspan="3">@group.Key</th></tr>
            foreach (var book in group.Values)
            {
                <tr>
                    <td>@book.ma_tmuc</td>
                    @*<td>@book.Ten</td>*@
                    <td>@book.TongTien.ToString("c")</td>
                    <td>@book.Nam_KhoBac</td>
                </tr>
            }
        }
    </tbody>
</table>