@model PhanQuyen.Models.UserChangePassModel
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Đổi mật khẩu</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                            <fieldset>
                                <div class="form-group">                                    
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "User name", @readonly = true })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.OldPass, new { @class = "form-control", @placeholder = "Mật khẩu cũ" })                                    
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.NewPass1, new { @class = "form-control", @placeholder = "Mật khẩu mới" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.NewPass2, new { @class = "form-control", @placeholder = "Nhắc lại Mật khẩu mới" })
                                </div>

                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-success btn-block">Đồng ý</button>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}