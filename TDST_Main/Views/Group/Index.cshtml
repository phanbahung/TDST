@using TDST.Models
@model List<Group<string, Book>>

@{
    ViewBag.Title = "LINQ Grouping";
}

<style type="text/css">
    table {
        border: 1px solid #999;
    }

    th {
        padding: 8px;
        background: LightBlue;
        text-align: left;
    }

    thead th {
        background: SteelBlue;
        color: #fff;
    }

    td {
        padding: 5px 8px;
        background: #f5f5f5;
    }
</style>

<h2>Grouping books by Genre</h2>

<table>
    <thead><tr><th>Tiểu mục</th><th>Năm</th><th>Số tiền</th></tr></thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr><th colspan="3">@group.Key</th></tr>
            foreach (var book in group.Values)
            {
                <tr><td>@book.TieuMuc</td><td>@book.Nam</td><td>@book.SoTien.ToString("c")</td></tr>
            }
        }
    </tbody>
</table>