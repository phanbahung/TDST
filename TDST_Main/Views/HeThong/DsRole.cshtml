@model IEnumerable<TDST_CRUD.EF.Role>

@{
    ViewBag.Title = "DonViCungCap";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="panel-heading">
    1.2. Danh mục đơn vị
</div>

<div class="panel-body">


    <table id="example" class="display" cellpadding="0" cellspacing="0" border="0">
        <thead>
            <tr>
                <th>Id Role</th>
                <th>Role</th>
                <th>Mô tả</th>
                <th>Controller</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr class="gradeA">
                    <td>@item.IdRole</td>
                    <td>@item.RoleName </td>
                    <td>@item.MoTa </td>
                    <td>@item.ControllerName </td>
                    <td>@item.ActionName </td>                                        
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="rounded-foot-left" colspan='2' style="height: 14px"></td>
            </tr>
        </tfoot>
    </table>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">X</button>
                    <h4 class="modal-title" id="myModalLabel">Chi tiết đơn vị cung cấp</h4>
                </div>
                <div class="modal-body">

                    <form class="bootstrap-form needs-validation" novalidate>
                        <div class="form-group">
                            <label for="EmployeeId">ID</label>
                            <input type="text" class="form-control" id="Id" placeholder="Id - Mã hệ thống tự sinh" disabled="disabled" />

                        </div>
                        <div class="form-group">
                            <label for="Name">Tên viết tắt</label>
                            <input type="text" class="form-control" id="MaDonViCC" placeholder="Tên viết tắt, ví dụ: FPT" required autocomplete="off" />
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">Không được để trống!</div>
                        </div>
                        <div class="form-group">
                            <label for="Age">Tên đầy đủ</label>
                            <input type="text" class="form-control" id="TenDonViCC" placeholder="Tên đầy đủ, ví dụ: Công ty cổ phần FPT " />
                        </div>
                    </form>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Đồng ý</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" onclick="Update();">Lưu thay đổi</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>   <!-- /.modal  style="display:none;"   --->



</div>
<!-- /.panel-body -->
