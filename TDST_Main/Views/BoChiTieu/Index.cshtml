@model IEnumerable<TDST_CRUD.EF.BoChiTieu>

@{
    ViewBag.Title = "DonViCungCap";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="panel-heading">
    1.2. Danh sách Bộ chỉ tiêu
</div>

    <table id="example" class="display" cellpadding="0" cellspacing="0" border="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên bộ chỉ tiêu</th> 
                <th>Trạng thái</th>                
                <th>Ngày cập nhật</th>
                <th>Lần cập nhật cuối</th>
                <th>Người cập nhật</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr class="gradeA">
                    <td>@item.IdBoChiTieu</td>
                    <td>@Html.ActionLink(@item.TenBoChiTieu, "edit", new {id = item.IdBoChiTieu}) </td>                    
                    <td><a href="#" class="btn-active" data-id="@item.IdBoChiTieu">@Html.Raw(@item.Locked ? "<strong>Khóa</strong>" : "Không khoá") </td>
                    <td>@item.UpdateTime </td>
                    <td>@item.LastUpdate</td>
                    <td>@item.UserUpdate</td>                    
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="rounded-foot-left" colspan='2' style="height: 14px"></td>
            </tr>
        </tfoot>
    </table>
